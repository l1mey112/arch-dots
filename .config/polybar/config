[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "   "
format-prefix-foreground = ${colors.violet}
label = "%percentage% "
label-foreground = ${colors.violet}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
label = %gb_used%
format-foreground = #e85858

[module/date]
type = internal/date
interval = 1

date = "  %d.%m.%y"
time= "%r "

label = %date% %time%
label-foreground = ${colors.light-blue}

[module/volume]
type = internal/volume

