[colors]
background = #000000
white = #fff
red = #f00
light-blue = #7ebaec
black = #000
blue = #02adff
violet = #8e1eff
off-white = #fbf8f6
spotify = #1ed760

[bar/right]
width = 100%
height = 18
fixed-center = true 

background = ${colors.background}
foreground = ${colors.white}
font-0 = JetBrainsMonoMedium Nerd Font:pixelsize=10;3

modules-left = i3 title
modules-right = mullvad battery filesystem memory date
modules-center = cpu spotify-prev spotify spotify-next volume

#tray-position = right
tray-position = none
tray-background = ${colors.background}
tray-padding = 2

;[module/battery]
;type = internal/battery
;blacklist-0 = num lock
;
;format-prefix = " "
;format-prefix-font = 1
;format-prefix-foreground = ${colors.white}
;format-prefix-background = ${colors.violet}
;
;label-layout = %layout%
;label-layout-font = 1
;label-layout-foreground = ${colors.white}
;label-layout-background = ${colors.violet}
;
;label-indicator-background = ${colors.violet}
;label-indicator-underline = ${colors.blue}

[module/mullvad]
type = custom/script
tail = true
interval = 1
format-prefix = " 嬨 "
exec = ~/.config/polybar/scroll_mullvad_status.sh
format-foreground = ${colors.blue}

[module/spotify]
type = custom/script
tail = true
interval = 1
; prefix symbol is shown before the text
format-prefix = "  "
exec = ~/.config/polybar/scroll_spotify_status.sh
format-foreground = ${colors.spotify}

[module/spotify-prev]
type = custom/script
exec = echo "  "
format = <label>
format-foreground = ${colors.off-white}
click-left = playerctl previous -p spotify

;[module/spotify-play-pause]
;type = custom/ipc
;hook-0 = echo "<playing-symbol>"
;hook-1 = echo "<pause-symbol>"
;initial = 1
;click-left = playerctl play-pause -p spotify

;	Insert this to replace the functionless 
;	play-pause part of spotify scroller

[module/spotify-next]
type = custom/script
exec = echo "  "
format = <label>
format-foreground = ${colors.off-white}
click-left = playerctl next -p spotify

[module/i3index]
type = internal/i3
format = <label-state>

label-focused = " %name% "
label-focused-foreground = ${colors.background}

label-visible = " %name% "
label-visible-foreground = ${colors.background}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = "  %percentage_used%/100 "
label-unmounted = "  %mountpoint%: not mounted "
label-unmounted-foreground = #66
label-mounted-foreground = #cbd1d7

[module/i3]
type = internal/i3
